<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="40dp"
    android:background="@color/ELCColorBlak"
    android:id="@+id/bar_layout">

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:id="@+id/bar_btn_home"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/app_logo_full"
        android:scaleType="centerCrop"
        android:background="@color/ELCColorClear"
        android:maxWidth="60dp"
        android:minWidth="40dp"
        android:layout_marginLeft="5dp"
        android:onClick="returnHome" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:text="@string/ELCIcon_margen"
        android:id="@+id/bar_textview_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="38sp"
        android:textAlignment="center"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo Activity"
        android:id="@+id/bar_textview_titulo"
        android:textAlignment="viewEnd"
        android:textSize="22dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/bar_textview_icon"
        android:layout_toStartOf="@+id/bar_textview_icon"
        android:layout_marginRight="10dp" />

</RelativeLayout>