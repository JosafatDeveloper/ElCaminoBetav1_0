<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.onlinesellers.elcaminobeta10.DestinosActivity"
    android:background="@color/ELCColorBack2White">

    <include
        layout="@layout/bar_top_menu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/include3"
        android:layout_alignParentEnd="true" />

    <include
        layout="@layout/bar_footer_two_col"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/include9" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/include3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/include9" />

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/include9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:background="@drawable/fondo_btn_dark">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/ELCIcon_plus"
            android:id="@+id/destinos_btn_add"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/ELCColorClear"
            android:textSize="28dp"
            android:textAlignment="center"
            android:textColor="@color/ELCColorWhite"
            android:onClick="clickAddDestino"
            android:paddingTop="10dp" />
    </RelativeLayout>


</RelativeLayout>
