<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@drawable/row_activity_ligth">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <mx.onlinesellers.elcaminobeta10.CirculeMask
            android:layout_width="40dp"
            android:layout_height="42dp"
            android:id="@+id/userImageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Titulo"
            android:id="@+id/row_text_title"
            android:textColor="@color/ELCColorBlak"
            android:textSize="16sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:autoText="false"
            android:longClickable="false"
            android:linksClickable="false"
            android:maxLines="1"
            android:scrollHorizontally="false"
            android:paddingRight="75dp"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/userImageView"
            android:layout_toEndOf="@+id/userImageView"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_alignRight="@+id/row_text_plus" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n de la Actividad. "
            android:id="@+id/row_text_describe"
            android:textColor="@color/ELCColorBlackSubtitle"
            android:singleLine="true"
            android:paddingRight="5dp"
            android:layout_below="@+id/row_text_title"
            android:layout_toLeftOf="@+id/row_text_valor"
            android:layout_alignLeft="@+id/row_text_title"
            android:layout_alignStart="@+id/row_text_title" />

        <TextView
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:text="@string/ELCIcon_margen"
            android:id="@+id/row_text_icon"
            android:textColor="@color/ELCColorBlak"
            android:textAlignment="center"
            android:textSize="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Zona Norte"
            android:id="@+id/row_text_plus"
            android:textAlignment="viewEnd"
            android:textColor="@color/ELCColorBlackSubtitle"
            android:textSize="10dp"
            android:layout_alignTop="@+id/userImageView"
            android:layout_toLeftOf="@+id/row_text_icon"
            android:layout_alignLeft="@+id/row_text_valor"
            android:layout_alignStart="@+id/row_text_valor"
            android:paddingRight="5dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="o o o o o"
            android:id="@+id/row_text_valor"
            android:layout_below="@+id/row_text_plus"
            android:layout_toLeftOf="@+id/row_text_icon"
            android:layout_toStartOf="@+id/row_text_icon"
            android:textAlignment="viewEnd"
            android:paddingRight="5dp"
            android:textSize="18dp"
            android:shadowColor="@color/ELCColorBlackSubtitle"
            android:shadowDx="0.5"
            android:shadowDy="0.5"
            android:shadowRadius="0.5" />


    </RelativeLayout>

</LinearLayout>