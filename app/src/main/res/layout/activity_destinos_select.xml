<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.onlinesellers.elcaminobeta10.DestinosSelectActivity"
    android:background="@color/ELCColorBack2White">

    <include
        layout="@layout/bar_top_menu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/include3"
        android:layout_alignParentEnd="true" />

    <include
        layout="@layout/bar_footer_two_col"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/include9" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/include9"
        android:layout_below="@+id/row_new" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/row_new"
        android:layout_below="@+id/include3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+ Agregar recorrido a "
            android:id="@+id/destinos_add_viaje"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/frame_row_plus"
            android:textColor="@color/ELCColorBlackSubtitle"
            android:textSize="18sp"
            android:textStyle="bold"
            android:onClick="newViajeCreate" />
    </RelativeLayout>


</RelativeLayout>
