<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.onlinesellers.elcaminobeta10.RegistroNuevoS7Activity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/linearLayout"
        android:background="@color/ELCColorBlak">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageView"
            android:src="@drawable/app_logo_full" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Motocicleta"
            android:id="@+id/textView5"
            android:textSize="25dp"
            android:textAlignment="viewEnd"
            android:layout_marginTop="10dp"
            android:paddingRight="10dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marca"
                android:id="@+id/textView2"
                android:layout_alignTop="@+id/scrollView"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:textSize="22dp"
                android:layout_marginTop="20dp" />

            <EditText
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editText6"
                android:layout_gravity="center_horizontal"
                android:inputType="text|textPersonName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo"
                android:id="@+id/textView3"
                android:layout_gravity="center_horizontal"
                android:textSize="22dp"
                android:layout_marginTop="20dp" />

            <EditText
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editText7"
                android:layout_gravity="center_horizontal"
                android:inputType="text|textPersonName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modelo"
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textSize="22dp" />

            <EditText
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:inputType="text|textPersonName"
                android:ems="10"
                android:id="@+id/editText8"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Siguiente"
                android:id="@+id/button5"
                android:layout_gravity="center_horizontal"
                android:background="@color/ELCColorClear"
                android:onClick="onClickNext"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
