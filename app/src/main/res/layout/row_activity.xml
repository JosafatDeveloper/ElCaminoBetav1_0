<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@drawable/row_activity_ligth">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo"
            android:id="@+id/row_text_title"
            android:textColor="@color/ELCColorBlak"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/userImageView"
            android:layout_toEndOf="@+id/userImageView"
            android:layout_marginTop="3dp"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:singleLine="true"
            android:autoText="false"
            android:longClickable="false"
            android:linksClickable="false"
            android:maxLines="1"
            android:scrollHorizontally="false"
            android:paddingRight="93dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false" />

        <mx.onlinesellers.elcaminobeta10.CirculeMask
            android:layout_width="40dp"
            android:layout_height="42dp"
            android:id="@+id/userImageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n de la Actividad. "
            android:id="@+id/row_text_describe"
            android:layout_below="@+id/row_text_title"
            android:layout_toRightOf="@+id/userImageView"
            android:textColor="@color/ELCColorBlackSubtitle"
            android:layout_marginLeft="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:singleLine="true"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Tiempo"
            android:id="@+id/row_text_tiempo"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textStyle="italic"
            android:textColor="@color/ELCColorBlackSubtitle"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:maxLength="20"
            android:singleLine="true"
            android:autoText="false"
            android:textAlignment="viewEnd" />


    </RelativeLayout>

</LinearLayout>